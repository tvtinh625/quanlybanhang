@model quanlybanhang.Models.Product
<head>

    <style>
        img {
            height: 350px;
            max-width: 350px;
        }
    </style>
</head>
@{
    ViewBag.Title = "PVProdlnfo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <dl class="dl-horizontal">
        <div class="col-md-4">
            <img src="@Html.DisplayFor(model => model.ProductImage)" />
        </div>
        <div class="col-md-8">
            <dl class="bg-info">
                <dt>Tên sản phẩm</dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt>Đơn giá</dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductPrice)
                </dd>
                <dt>Mô tả</dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductDescription)
                </dd>
                <dt>Danh mục</dt>
                <dd>
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
        </div>
</div>

